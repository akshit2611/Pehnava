<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registered Users</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen">
    <div class="container mx-auto py-8">
        <h1 class="text-3xl font-bold mb-6 text-center"><u>Our Registered Users</u></h1>
        <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden flex-wrap">
            <thead>
                <tr>
                    <th class="py-2 px-4 bg-gray-200 text-left">Names</th>
                    <th class="py-2 px-4 bg-gray-200 text-left">Email</th>
                    <th class="py-2 px-4 bg-gray-200 text-left">PinCode</th>
                    <th class="py-2 px-4 bg-gray-200 text-left">Registered At</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(function(user) { %>
                    <tr>
                        <td class="border px-4 py-2"><%= user.username %></td>
                        <td class="border px-4 py-2"><%= user.email %></td>
                        <td class="border px-4 py-2"><%= user.PinCode %></td>
                        <td class="border px-4 py-2"><%= new Date(user.createdAt).toLocaleString('en-IN', { dateStyle: 'medium', timeStyle: 'short' }) %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
