<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Unmatched Login Attempts</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen">
    <div class="container mx-auto py-8">
        <h1 class="text-3xl font-bold mb-6 text-center"><u>Unmatched Login Attempts</u></h1>
        <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
            <thead>
                <tr>
                    <th class="py-2 px-4 bg-gray-200 text-left">Name</th>
                    <th class="py-2 px-4 bg-gray-200 text-left">Email</th>
                    <th class="py-2 px-4 bg-gray-200 text-left">Attempted At</th>
                    <th class="py-2 px-4 bg-gray-200 text-left">Action</th>
                </tr>
            </thead>
            <tbody>
                <% records.forEach(function(record) { %>
                    <tr>
                        <td class="border px-4 py-2"><%= record.username %></td>
                        <td class="border px-4 py-2"><%= record.email %></td>
                        <td class="border px-4 py-2"><%= new Date(record.attemptedAt).toLocaleString('en-IN', { dateStyle: 'medium', timeStyle: 'short' }) %></td>
                        <td class="border px-4 py-2">
                            <form method="POST" action="/user/record/delete/<%= record._id %>" style="display:inline;">
                                <button type="submit" class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-700">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
